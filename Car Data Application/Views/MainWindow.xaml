<Window x:Class="Car_Data_Application.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Car_Data_Application.Views"
        mc:Ignorable="d"
        Title="Car Data Application" Height="450" Width="800">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"></ColumnDefinition>
            <ColumnDefinition Width="0.8*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.90*"></RowDefinition>
            <RowDefinition Height="0.1*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid x:Name="SidePanel" Grid.Column="0" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.125*"></RowDefinition>
                <RowDefinition Height="0.125*"></RowDefinition>
                <RowDefinition Height="0.125*"></RowDefinition>
                <RowDefinition Height="0.125*"></RowDefinition>
                <RowDefinition Height="0.125*"></RowDefinition>
                <RowDefinition Height="0.125*"></RowDefinition>
                <RowDefinition Height="0.125*"></RowDefinition>
                <RowDefinition Height="0.125*"></RowDefinition>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Content="Zaloguj" x:Name="Login" Background="White"/>
            <Button Grid.Row="1" Content="Strona Głowna" Click="HomeOnClick" Background="White"/>
            <Button Grid.Row="2" Content="Pojazdy" Click="VehiclesOnClick" Background="White"/>
            <Button Grid.Row="3" Content="Historia Tankowań" Click="RefuelingHistoryClick" Background="White"/>
            <Button Grid.Row="4" Content="Statystyki" Background="White"/>
            <Button Grid.Row="5" Content="Koszta" Click="ServicesClick" Background="White"/>
            <Button Grid.Row="6" Content="Kopia zapasowa" Background="White"/>
            <Button Grid.Row="7" Content="Ustawienia" Background="White"/>

        </Grid>

        <ScrollViewer x:Name="ScrollViewerContent" Grid.Column="1" Grid.Row="0"  Background = "LightGreen"/>

        <Grid x:Name="Footer" Grid.Row="1" Grid.Column="1"   Background="LightCoral">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid x:Name="CarName" Grid.Column="1">
                <Button x:Name="CarNameButton" Click="ChangeActiveCarClick"  Content="CAR" Background="Transparent"/>
            </Grid>
            <TextBlock x:Name="UserName" VerticalAlignment="Center" HorizontalAlignment="Center" Text="USER" Background="Transparent"/>
        </Grid>

    </Grid>
</Window>
