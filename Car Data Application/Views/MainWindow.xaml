<Window x:Class="Car_Data_Application.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Car_Data_Application.Views"
        mc:Ignorable="d"
        Title="Car Data Application" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"></ColumnDefinition>
            <ColumnDefinition Width="0.8*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid x:Name="SidePanel" Grid.Column="0" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.125*"></RowDefinition>
                <RowDefinition Height="0.125*"></RowDefinition>
                <RowDefinition Height="0.125*"></RowDefinition>
                <RowDefinition Height="0.125*"></RowDefinition>
                <RowDefinition Height="0.125*"></RowDefinition>
                <RowDefinition Height="0.125*"></RowDefinition>
                <RowDefinition Height="0.125*"></RowDefinition>
                <RowDefinition Height="0.125*"></RowDefinition>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Content="Zaloguj" x:Name="Login" Background="White"/>
            <Button Grid.Row="1" Content="Strona Głowna" Background="White"/>
            <Button Grid.Row="2" Content="Pojazdy" Background="White"/>
            <Button Grid.Row="3" Content="Historia Tankowań" Background="White"/>
            <Button Grid.Row="4" Content="Statystyki" Background="White"/>
            <Button Grid.Row="5" Content="Koszta" Background="White"/>
            <Button Grid.Row="6" Content="Kopia zapasowa" Background="White"/>
            <Button Grid.Row="7" Content="Ustawienia" Background="White"/>

        </Grid>
        <ScrollViewer Grid.Column="1" Grid.Row="0" Background="Aqua">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="120"/>

                </Grid.RowDefinitions>
                <Button Grid.Row="0" x:Name="button_01" Background="Orange" Margin="10"  Content="Yamah Fazer FZ6"/>
                <Image Grid.Row="0"  Source="pack://application:,,,/Images/draw.png"  Grid.RowSpan="1" Margin="15" HorizontalAlignment="Left"/>
                <Button Grid.Row="1" Background="Orange" Margin="10"/>
                <Button Grid.Row="2" Background="Orange" Margin="10"/>
                <Button Grid.Row="3" Background="Orange" Margin="10"/>
                <Button Grid.Row="4" Background="Orange" Margin="10"/>

            </Grid>
        </ScrollViewer>
        <Button Grid.Column="1" Grid.Row="0" Width="55" Height="55" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,30,10" Content="+" FontSize="40"/>
    </Grid>
</Window>
